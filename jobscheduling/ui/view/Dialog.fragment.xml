<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
	<Dialog
		title="{i18n>ENTERCREDENTIALS}"
		class="sapUiPopupWithPadding" >
		<content>
			<f:SimpleForm id="JobScheduleForm"
		      maxContainerCols="1"
		      editable="true"
		      layout="ResponsiveGridLayout"
		      labelSpanL="3"
		      labelSpanM="3"
		      emptySpanL="4"
		      emptySpanM="4"
		      columnsL="1"
		      columnsM="1"
		      class="editableForm">
		      <f:content>
		        <Label text="{i18n>USERNAME}" />
		        <Input id="idDgUsername" value="" />
		        <Label text="{i18n>PASSWORD}" />
		        <Input id="idDgPassword" type="Password" value="" />
		      </f:content>
			</f:SimpleForm>
		</content>
		<beginButton>
			<Button text="{i18n>OK}" press="onCloseDialog" />
		</beginButton>
		<endButton>
			<Button text="{i18n>CANCEL}" press="onCloseDialog" />
		</endButton>		
	</Dialog>
</core:FragmentDefinition>